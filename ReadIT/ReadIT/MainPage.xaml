<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ReadIT.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ReadIT">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button
            x:Name="btnStart"
            Margin="10"
            Clicked="btnStart_Clicked"
            Text="Learning Start" />
        <Button
            x:Name="btnLoadData"
            Grid.Row="1"
            Margin="10"
            Clicked="btnLoadData_Clicked"
            Text="Load Data" />
        <Button
            x:Name="btnEditData"
            Grid.Row="2"
            Margin="10"
            Clicked="btnEditData_Clicked"
            Text="Edit Data" />
        <Button
            x:Name="btnManual"
            Grid.Row="3"
            Margin="10"
            Text="How To Use?"
            Clicked="btnManual_Clicked"/>
    </Grid>
</ContentPage>